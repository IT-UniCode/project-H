---
import type { News } from "src/interfaces";
import { routes } from "src/routes";

interface Props {
  news: News;
}

const { news } = Astro.props;
---

<article class="rounded py-3 px-2 border">
  <h5 class="text-3xl">
    <a href={routes.NewsById + news.slug}>{news.title}</a>
  </h5>

  <article class="flex gap-x-2">
    {
      news.previewImage && (
        <div class="max-h-40">
          <img alt={`preview image to ${news.previewImage}`} />
        </div>
      )
    }
    <p>{news.previewText}</p>
  </article>
</article>
